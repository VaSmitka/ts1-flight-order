{% extends 'base.html.twig' %}

{% block title %}Done!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Order is done!</h1>

    <table class="table table-striped w-75">
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>{{firstName}} {{lastName}}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{email}}</td>
            </tr>
            <tr>
                <th scope="row">Registrated</th>
                <td>No</td>
            </tr>
            <tr>
                <th scope="row">Destination</th>
                <td>{{destination}}</td>
            </tr>
            {% if not isEU %}
                <tr>
                    <th scope="row">Warning</th>
                    <td>A visa will be required. </td>
                </tr>
            {% endif %}
            <tr>
                <th scope="row">Discount type</th>
                <td>{{discountType}}</td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td>{{fullPrice}}Kč - {{discount}}% = {{finalPrice}}Kč </td>
            </tr>
        </tbody>
        </table>
</div>
{% endblock %}